<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Maverick Essentials"
        android:textColor="@android:color/black"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/customer_signup_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="32dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="@+id/title_text"
        app:layout_constraintTop_toBottomOf="@+id/title_text"
        app:srcCompat="@drawable/customer_signup_icon" />

    <ImageView
        android:id="@+id/store_signup_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@+id/customer_signup_img"
        app:layout_constraintEnd_toEndOf="@+id/title_text"
        app:layout_constraintTop_toTopOf="@+id/customer_signup_img"
        app:srcCompat="@drawable/store_signup_icon" />

    <TextView
        android:id="@+id/customer_register_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="Customer Sign up"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/customer_signup_img"
        app:layout_constraintStart_toStartOf="@+id/customer_signup_img"
        app:layout_constraintTop_toBottomOf="@+id/customer_signup_img" />

    <TextView
        android:id="@+id/store_reigter_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="Store Sign up"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/customer_register_txt"
        app:layout_constraintEnd_toEndOf="@+id/store_signup_img"
        app:layout_constraintStart_toStartOf="@+id/store_signup_img"
        app:layout_constraintTop_toTopOf="@+id/customer_register_txt" />

    <ImageView
        android:id="@+id/customer_signin_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="32dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="@+id/customer_signup_img"
        app:layout_constraintStart_toStartOf="@+id/customer_signup_img"
        app:layout_constraintTop_toBottomOf="@+id/customer_register_txt"
        app:srcCompat="@drawable/customer_sigin_icon" />

    <ImageView
        android:id="@+id/store_signin_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@+id/customer_signin_img"
        app:layout_constraintEnd_toEndOf="@+id/store_signup_img"
        app:layout_constraintStart_toStartOf="@+id/store_signup_img"
        app:layout_constraintTop_toTopOf="@+id/customer_signin_img"
        app:srcCompat="@drawable/store_signin_icon" />

    <TextView
        android:id="@+id/customer_login_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Customer Sign in"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/customer_register_txt"
        app:layout_constraintStart_toStartOf="@+id/customer_register_txt"
        app:layout_constraintTop_toBottomOf="@+id/customer_signin_img" />

    <TextView
        android:id="@+id/store_login_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Store Sign in"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/customer_login_txt"
        app:layout_constraintEnd_toEndOf="@+id/store_signin_img"
        app:layout_constraintStart_toStartOf="@+id/store_signin_img"
        app:layout_constraintTop_toTopOf="@+id/customer_login_txt" />

    <ImageView
        android:id="@+id/ar_model_viewer_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="@+id/store_signin_img"
        app:layout_constraintStart_toStartOf="@+id/customer_signin_img"
        app:layout_constraintTop_toBottomOf="@+id/customer_login_txt"
        app:srcCompat="@android:drawable/btn_star_big_on" />

    <TextView
        android:id="@+id/ar_model_viewer_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="AR Model Viewer"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/ar_model_viewer_img"
        app:layout_constraintStart_toStartOf="@+id/ar_model_viewer_img"
        app:layout_constraintTop_toBottomOf="@+id/ar_model_viewer_img" />

</androidx.constraintlayout.widget.ConstraintLayout>
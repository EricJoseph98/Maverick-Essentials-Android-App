<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomerSignIn">

    <TextView
        android:id="@+id/customer_sigin_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="Customer Sign In"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/customer_username_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Enter Username"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/customer_sigin_title"
        app:layout_constraintStart_toStartOf="@+id/customer_sigin_title"
        app:layout_constraintTop_toBottomOf="@+id/customer_sigin_title" />

    <EditText
        android:id="@+id/customer_password_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Enter Password"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/customer_username_txt"
        app:layout_constraintStart_toStartOf="@+id/customer_username_txt"
        app:layout_constraintTop_toBottomOf="@+id/customer_username_txt" />

    <Button
        android:id="@+id/customer_signin_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="SIgn In"
        app:layout_constraintEnd_toEndOf="@+id/customer_password_txt"
        app:layout_constraintHorizontal_bias="0.475"
        app:layout_constraintStart_toStartOf="@+id/customer_password_txt"
        app:layout_constraintTop_toBottomOf="@+id/customer_password_txt" />

    <ImageButton
        android:id="@+id/store_view_btn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="32dp"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="@+id/customer_signin_btn"
        app:layout_constraintStart_toStartOf="@+id/customer_signin_btn"
        app:layout_constraintTop_toBottomOf="@+id/customer_signin_btn"
        app:srcCompat="@drawable/store_icon" />

    <TextView
        android:id="@+id/view_stores_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="View Stores"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/store_view_btn"
        app:layout_constraintStart_toStartOf="@+id/store_view_btn"
        app:layout_constraintTop_toBottomOf="@+id/store_view_btn" />
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomerSignUp">

    <TextView
        android:id="@+id/customer_title_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="Customer Sign Up"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/customer_name_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Enter Customer Name"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/customer_title_txt"
        app:layout_constraintStart_toStartOf="@+id/customer_title_txt"
        app:layout_constraintTop_toBottomOf="@+id/customer_title_txt" />

    <EditText
        android:id="@+id/customer_email_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Enter Customer Email ID"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="@+id/customer_name_txt"
        app:layout_constraintStart_toStartOf="@+id/customer_name_txt"
        app:layout_constraintTop_toBottomOf="@+id/customer_name_txt" />

    <EditText
        android:id="@+id/customer_phone_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Enter Customer Phone"
        android:inputType="phone"
        app:layout_constraintEnd_toEndOf="@+id/customer_email_txt"
        app:layout_constraintStart_toStartOf="@+id/customer_email_txt"
        app:layout_constraintTop_toBottomOf="@+id/customer_email_txt" />

    <EditText
        android:id="@+id/customer_address_txt"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Enter Customer Drop off address"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="@+id/customer_phone_txt"
        app:layout_constraintStart_toStartOf="@+id/customer_phone_txt"
        app:layout_constraintTop_toBottomOf="@+id/customer_phone_txt" />

    <EditText
        android:id="@+id/customer_username_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Enter Customer Username (for Login)"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/customer_address_txt"
        app:layout_constraintStart_toStartOf="@+id/customer_address_txt"
        app:layout_constraintTop_toBottomOf="@+id/customer_address_txt" />

    <ImageButton
        android:id="@+id/customer_register_btn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="70dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="32dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="@+id/customer_password_txt"
        app:layout_constraintTop_toBottomOf="@+id/customer_password_txt"
        app:srcCompat="@drawable/tick_mark" />

    <ImageButton
        android:id="@+id/customer_clear_btn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="100dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@+id/customer_register_btn"
        app:layout_constraintEnd_toEndOf="@+id/customer_password_txt"
        app:layout_constraintTop_toTopOf="@+id/customer_register_btn"
        app:srcCompat="@android:drawable/ic_delete" />

    <TextView
        android:id="@+id/customer_register_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Confirm"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/customer_register_btn"
        app:layout_constraintStart_toStartOf="@+id/customer_register_btn"
        app:layout_constraintTop_toBottomOf="@+id/customer_register_btn" />

    <TextView
        android:id="@+id/customer_clear_lbl"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="Clear"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/customer_register_lbl"
        app:layout_constraintEnd_toEndOf="@+id/customer_clear_btn"
        app:layout_constraintStart_toStartOf="@+id/customer_clear_btn"
        app:layout_constraintTop_toTopOf="@+id/customer_register_lbl" />

    <EditText
        android:id="@+id/customer_password_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Enter Customer Password"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/customer_username_txt"
        app:layout_constraintStart_toStartOf="@+id/customer_username_txt"
        app:layout_constraintTop_toBottomOf="@+id/customer_username_txt" />

</androidx.constraintlayout.widget.ConstraintLayout>